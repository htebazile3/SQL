-- query that orders items by price
select item_name, price
from superstore
order by price;

--show statistics about item prices like sum
select sum (price)
from superstore;

--statistics of price for items in category of "Kitchen Supplies"
select sum (price), category
from superstore
where category = "Kitchen Supplies";

--what are the stock_quantity of all items
select item_name, stock_quantity
from superstore;
